<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <!-- Aufgabe 1 -->
    <servlet>
        <servlet-name>InitParameterServlet</servlet-name>
        <servlet-class>de.fhswf.praktikum2.InitParameterServlet</servlet-class>
        <init-param>
            <param-name>Name</param-name>
            <param-value>Cezary Kutko</param-value>
        </init-param>
        <init-param>
            <param-name>Rolle</param-name>
            <param-value>Student</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>InitParameterServlet</servlet-name>
        <url-pattern>/initparams</url-pattern>
    </servlet-mapping>

    <!-- Aufgabe 2 -->
    <servlet>
        <servlet-name>RequestInfoServlet</servlet-name>
        <servlet-class>de.fhswf.praktikum2.RequestInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RequestInfoServlet</servlet-name>
        <url-pattern>/requestinfo</url-pattern>
    </servlet-mapping>

    <!-- Aufgabe 3 -->
    <servlet>
        <servlet-name>TimeServlet</servlet-name>
        <servlet-class>de.fhswf.praktikum2.TimeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TimeServlet</servlet-name>
        <url-pattern>/time</url-pattern>
    </servlet-mapping>

</web-app>
